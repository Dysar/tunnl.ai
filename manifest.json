{
  "manifest_version": 3,
  "name": "tunnl.ai - AI Website Blocker",
  "version": "1.0.0",
  "description": "AI-powered website blocker that helps you stay focused on your tasks by analyzing and blocking distracting websites.",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "webNavigation",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "src/background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "tunnl.ai Settings"
  },
  "options_page": "src/options/options.html",
  "web_accessible_resources": [
    {
      "resources": [
        "src/blocked/blocked.html",
        "src/blocked/blocked.js",
        "assets/images/access_denied.png",
        "assets/images/beaver.png",
        "assets/images/blocked_beaver.png",
        "assets/fonts/Excalifont Regular.woff2"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
