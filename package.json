{
  "name": "tunnl-ai-extension",
  "version": "1.0.0",
  "description": "AI-powered website blocker Chrome extension",
  "main": "src/background/background.js",
  "scripts": {
    "build": "npm run build:ts && node scripts/build.js",
    "build:ts": "tsc",
    "build:watch": "tsc --watch",
    "bundle": "node scripts/bundle.js",
    "test": "node scripts/test.js",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "package": "node scripts/package.js",
    "dev": "npm run build && npm run package",
    "clean": "rm -rf dist/",
    "validate": "npm run lint && npm run test",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "chrome-extension",
    "productivity",
    "ai",
    "website-blocker",
    "focus"
  ],
  "author": "tunnl.ai",
  "license": "MIT",
  "devDependencies": {
    "@types/chrome": "^0.0.250",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "archiver": "^6.0.0",
    "esbuild": "^0.25.10",
    "eslint": "^8.0.0",
    "fs-extra": "^11.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/tunnl-ai-extension.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/tunnl-ai-extension/issues"
  },
  "homepage": "https://github.com/your-username/tunnl-ai-extension#readme"
}
